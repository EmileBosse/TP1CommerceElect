<%= form_with(model: etude, local: true) do |form| %>
  <% if etude.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(etude.errors.count, "error") %> prohibited this etude from being saved:</h2>

      <ul>
      <% etude.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :"Secteur d'etudes" %>
    <%= form.text_field :SecteurEtudes, id: :etude_SecteurEtudes %>
  </div>

  <div class="field">
    <%= form.label :Niveau %>
    <%= form.text_field :Niveau, id: :etude_Niveau %>
  </div>

  <div class="field">
    <%= form.label :"Date de debut" %>
    <%= form.datetime_select :DateDebut, id: :etude_DateDebut %>
  </div>

  <div class="field">
    <%= form.label :"Date de completion" %>
    <%= form.datetime_select :DateCompletion, id: :etude_DateCompletion %>
  </div>

  <div class="field">
    <%= form.label :client_id %>
    <%= form.select :client_id, options_for_select(Client.all.map{|c|[c.Prenom+" "+c.Nom, c.id]}) %>
  </div>

  <div class="field">
    <%= form.label :institution_id %>
    <%= form.select :institution_id, options_for_select(Institution.all.map{|i|[i.Nom, i.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
